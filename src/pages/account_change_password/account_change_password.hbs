{{#>account_layout}}
    {{#> form   form-wrap="form-account-wrap"}}

        {{#> avatar styles="avatar"}} {{/avatar}}

        {{>account_input title="Старый пароль"
                styles="account-input"
                type="password"
                name="oldPassword"
                placeholder="Пароль"
                validate-message=""}}

        {{>account_input title="Новый пароль"
                styles="account-input"
                type="password"
                name="newPassword"
                placeholder="Пароль"
                validate-message=""}}

        {{>account_input title="Повторите новый пароль"
                styles="account-input"
                type="password"
                name="repeatNewPassword"
                placeholder="Пароль"
                validate-message=""}}

        {{> button label="Сохранить"
                styles="button-form"
                background="button-background-main"
                }}



    {{/form}}

{{/account_layout}}
