{{#> form form-title-style="form-title"  title="Регистрация" form-wrap="form-login-wrap"}}

                {{>input title="Почта"
                        styles="input input-icon-left input-email"
                        type="email"
                        name="email"
                        placeholder="pupkin@yandex.ru"
                        validate-message="Неверный формат"}}

                {{>input title="Логин"
                        styles="input input-icon-left input-login"
                        type="text"
                        name="login"
                        placeholder="pupkin"
                        validate-message=""}}

                {{>input title="Имя"
                        styles="input input-icon-left input-name"
                        type="text"
                        name="first_name"
                        placeholder="Василий"
                        validate-message=""}}

                {{>input title="Фамилия"
                        styles="input input-icon-left input-name"
                        type="text"
                        name="second_name"
                        placeholder="Пупкин"
                        validate-message=""}}

                {{>input title="Телефон"
                        styles="input input-icon-left input-phone"
                        type="phone"
                        name="phone"
                        placeholder="8 (909) 967 30 30"
                        validate-message=""
                        pattern="[0-9]{1} ([0-9]{3}) [0-9]{2} [0-9]{2} [0-9]{3}"}}

                {{>input title="Пароль"
                        styles="input input-icon-left input-password"
                        type="password"
                        name="password"
                        placeholder="Пароль"
                        validate-message=""}}

                {{>input title="Пароль (еще раз)"
                        styles="input input-icon-left input-password"
                        type="password"
                        name="repeat_password"
                        placeholder="Пароль"
                        validate-message=""}}

                {{> button label="Зарегистрироваться"
                        styles="button-form"
                        background="button-background-main"}}

                {{> link title="Войти"
                        link-wrap="link-wrap"
                        styles="link"
                        href="/login.html"}}


{{/form}}