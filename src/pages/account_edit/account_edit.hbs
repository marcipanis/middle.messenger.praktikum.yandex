{{#>account_layout}}
    {{#> form   form-wrap="form-account-wrap"}}

        {{#> avatar styles="avatar-default"}}
          <label for="avatar" class="input-avatar-label">Поменять аватар</label>
          <input type="file" class="input-avatar" id="avatar" name="avatar">
        {{/avatar}}

        {{>account_input title="Почта"
                styles="account-input"
                type="email"
                name="email"
                placeholder="pupkin@yandex.ru"
                validate-message=""}}

        {{>account_input title="Логин"
                styles="account-input"
                type="text"
                name="login"
                placeholder="pupkin"
                validate-message="Неверное значение"}}

        {{>account_input title="Имя"
                styles="account-input"
                type="text"
                name="first_name"
                placeholder="Василий"
                validate-message=""}}

        {{>account_input title="Фамилия"
                styles="account-input"
                type="text"
                name="second_name"
                placeholder="Пупкин"
                validate-message=""}}

        {{>account_input title="Имя в чате"
                styles="account-input"
                type="text"
                name="display_name"
                placeholder="Василий"
                validate-message=""}}

        {{>account_input title="Телефон"
                styles="account-input"
                type="phone"
                name="phone"
                placeholder="8 (909) 967 30 30"
                validate-message=""
                pattern="[0-9]{1} ([0-9]{3}) [0-9]{2} [0-9]{2} [0-9]{3}"}}

        {{> button label="Сохранить"
                styles="button-form"
                background="button-background-main"
        }}


    {{/form}}

{{/account_layout}}


